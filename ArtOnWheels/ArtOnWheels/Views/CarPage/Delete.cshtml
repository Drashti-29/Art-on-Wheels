@model ArtOnWheels.Models.CarDto

@{
    ViewData["Title"] = "Delete Car";
}

<style>
    body {
        font-family: 'Arial', sans-serif;
        background-color: #f3e9ff;
        color: #3e1d6e;
        margin: 0;
        padding: 0;
    }

    h1 {
        font-family: 'Georgia', serif;
        text-align: center;
        margin-top: 20px;
        color: #5c2ea8;
        font-size: 2rem;
    }

    .form-container {
        width: 50%;
        margin: 0 auto;
        padding: 20px;
        background-color: #fff;
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        margin-top: 40px;
        text-align: center;
    }

    p {
        font-size: 1.2rem;
        margin-bottom: 10px;
        color: #333;
    }

    .car-image {
        width: 200px;
        height: auto;
        margin: 20px 0;
        border-radius: 8px;
        box-shadow: 0 2px 6px rgba(0, 0, 0, 0.2);
    }

    .btn {
        padding: 10px 20px;
        font-size: 1rem;
        border-radius: 5px;
        border: none;
        cursor: pointer;
        display: inline-block;
        width: 45%;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

    .btn-danger {
        background-color: #d9534f;
        color: white;
    }

    .btn-secondary {
        background-color: #ccc;
        color: black;
        text-decoration: none;
        text-align: center;
    }

    .btn:hover {
        transform: scale(1.05);
        box-shadow: 0 6px 12px rgba(0, 0, 0, 0.2);
    }

    .button-container {
        display: flex;
        justify-content: space-between;
        margin-top: 20px;
    }
</style>

<h1>Delete a Car</h1>

<div class="form-container">
    <p>Are you sure you want to delete this car?</p>
    <p><strong>@Model.Type</strong></p>
    <img src="@Model.ImageUrl" alt="Car Image" class="car-image" />
    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="CarId" />
        <div class="button-container">
            <button type="submit" class="btn btn-danger">Delete</button>
            <a href="@Url.Action("List", "CarPage")" class="btn btn-secondary">Cancel</a>
        </div>
    </form>
</div>
