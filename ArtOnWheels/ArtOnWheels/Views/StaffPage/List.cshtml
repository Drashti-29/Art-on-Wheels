@model IEnumerable<ArtOnWheels.Models.StaffDto>

@{
    ViewData["Title"] = "Staff Members";
}

<style>
    body {
        font-family: 'Arial', sans-serif;
        background-color: #f5f0ff;
        color: #3e1d6e;
        margin: 0;
        padding: 0;
    }

    h1 {
        text-align: center;
        margin: 20px 0;
        color: #3e1d6e;
        font-family: 'Georgia', serif;
        text-transform: uppercase;
        letter-spacing: 2px;
    }

    .list-container {
        width: 90%;
        margin: 0 auto;
        background-color: #ffffff;
        border-radius: 15px;
        box-shadow: 0 6px 12px rgba(0, 0, 0, 0.1);
        overflow: hidden;
    }

    .list-header {
        background-color: #4b0082;
        color: #fff;
        display: flex;
        justify-content: space-between;
        padding: 15px;
        font-size: 18px;
        font-weight: bold;
        text-align: center;
    }

    .list-row {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 10px;
        border-bottom: 1px solid #ddd;
        transition: background-color 0.3s ease;
        text-align: center;
    }

        .list-row:hover {
            background-color: #f5f0ff;
        }

    .list-column {
        flex: 1;
        padding: 0 10px;
        font-size: 16px;
    }

    .list-actions {
        display: flex;
        gap: 10px;
        justify-content: center;
        align-items: center;
    }

        .list-actions a {
            padding: 8px;
            border-radius: 50%;
            text-decoration: none;
            color: #fff;
            font-size: 18px;
            width: 40px;
            height: 40px;
            display: flex;
            align-items: center;
            justify-content: center;
            transition: background-color 0.3s ease, transform 0.2s;
        }

        .list-actions .icon-details {
            background-color: #ffbc42;
        }

            .list-actions .icon-details:hover {
                background-color: #d99a31;
                transform: scale(1.1);
            }

        .list-actions .icon-edit {
            background-color: #20c997;
        }

            .list-actions .icon-edit:hover {
                background-color: #17a185;
                transform: scale(1.1);
            }

        .list-actions .icon-delete {
            background-color: #e63946;
        }

            .list-actions .icon-delete:hover {
                background-color: #b22d36;
                transform: scale(1.1);
            }

    .create-button {
        position: fixed;
        top: 120px;
        right: 140px;
        display: flex;
        align-items: center;
        padding: 14px;
        font-size: 16px;
        color: white;
        background-color: #6a5acd;
        text-decoration: none;
        border-radius: 50%;
        width: 50px;
        height: 50px;
        transition: width 0.3s ease, background-color 0.3s ease, right 0.3s ease;
        overflow: hidden;
        white-space: nowrap;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
    }

        .create-button i {
            font-size: 24px;
            visibility: visible;
            color: white;
            transition: transform 0.3s ease;
        }

        .create-button span {
            font-size: 16px;
            margin-left: 10px;
            color: white;
            opacity: 0;
            visibility: hidden;
            transition: opacity 0.3s ease, visibility 0.3s ease;
            white-space: nowrap;
        }

        .create-button:hover {
            width: 200px;
            border-radius: 5px;
            background-color: #5a4ebc;
            right: 50px;
        }

            .create-button:hover i {
                transform: rotate(360deg);
            }

            .create-button:hover span {
                opacity: 1;
                visibility: visible;
            }

</style>

<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">

<h1>@ViewData["Title"]</h1>

<a href="@Url.Action("Create", "StaffPage")" class="create-button">
    <i class="fas fa-plus"></i>
    <span>Add a Staff Member</span>
</a>

<div class="list-container">
    <!-- Table Header -->
    <div class="list-header">
        <div class="list-column">Staff ID</div>
        <div class="list-column">First Name</div>
        <div class="list-column">Last Name</div>
        <div class="list-column">Position</div>
        <div class="list-column">Contact</div>
        <div class="list-column">Exhibition</div>
        <div class="list-column">Actions</div>
    </div>

    <!-- Table Rows -->
    @foreach (var staff in Model)
    {
        <div class="list-row">
            <div class="list-column">@staff.StaffId</div>
            <div class="list-column">@staff.FirstName</div>
            <div class="list-column">@staff.LastName</div>
            <div class="list-column">@staff.Position</div>
            <div class="list-column">@staff.Contact</div>
            <div class="list-column">@staff.ExhibitionName</div>
            <div class="list-column list-actions">
                <a href="@Url.Action("Details", "StaffPage", new { id = staff.StaffId })" class="icon-details" title="View Details">
                    <i class="fas fa-info-circle"></i>
                </a>
                <a href="@Url.Action("Edit", "StaffPage", new { id = staff.StaffId })" class="icon-edit" title="Edit Staff">
                    <i class="fas fa-edit"></i>
                </a>
                <a href="@Url.Action("Delete", "StaffPage", new { id = staff.StaffId })" class="icon-delete" title="Delete Staff">
                    <i class="fas fa-trash-alt"></i>
                </a>
            </div>
        </div>
    }
</div>
